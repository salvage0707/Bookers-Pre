<h1><strong>Books</strong></h1>


<table>
	<thead>
		<th class="column-title">Title</th>
		<th class="column-title">Body</th>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr class="">
				<th class="book-title"><%= book.title %></th>
				<th class="book-body"><%= book.body %></th>
				<th class="links">
					<%= link_to 'Show', book_path(book.id) %> | 
					<%= link_to 'Edit', edit_book_path(book.id) %> | 
					<%= link_to 'Destroy', book_path(book.id), method: :'delete', "data-confirm" => "本当に削除しますか？" %>
				</th>
			</tr>
		<% end %>
	</tbody>
</table>

